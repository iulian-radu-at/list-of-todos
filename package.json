  "bugs": {
    "url": "https://github.com/iulian-radu-at/list-of-todos/issues"
  },
  "homepage": "https://github.com/iulian-radu-at/list-of-todos#readme",
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@storybook/react": "^5.2.1",
    "@types/babel-core": "^6.25.6",
